                <span>30 dn√≠ na vr√°cen√≠</span>
              </div>
            </div>
          {/if}
        </div>

        <div class="product-description">
          <h3>Popis produktu</h3>
          <p>{$product[description]|escape}</p>
        </div>

        <!-- Add to Cart Form -->
        <div class="product-actions">
          <form method="post" action="/eshop/product/add?id={$product['id']}" class="add-to-cart-form">
            <input type="hidden" name="id" value="{$product[id]}">
            
            <div class="quantity-section">
              <label for="qty">Mno≈æstv√≠:</label>
              <div class="quantity-controls">
                <button type="button" class="qty-btn" data-action="decrease">‚àí</button>
                <input type="number" name="qty" id="qty" value="1" min="1" max="99" class="qty-input">
                <button type="button" class="qty-btn" data-action="increase">+</button>
              </div>
            </div>

            <div class="action-buttons">
              <button type="submit" class="btn btn-primary btn-large add-to-cart-btn">
                <span class="btn-icon">üõí</span>
                <span class="btn-text">P≈ôidat do ko≈°√≠ku</span>
              </button>
              
              <button type="button" class="btn btn-secondary btn-large wishlist-btn">
                <span class="btn-icon">‚ù§Ô∏è</span>
                <span class="btn-text">P≈ôidat k obl√≠ben√Ωm</span>
              </button>
            </div>
          </form>
        </div>

        <!-- Product Features -->
        <div class="product-features">
          <div class="feature-item">
            <span class="feature-icon">‚ö°</span>
            <div class="feature-content">
              <h4>Rychl√© dod√°n√≠</h4>
